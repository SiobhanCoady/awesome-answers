<h1><%= @question.title %></h1>
<p><%= @question.body %></p>
<p>Created On: <%= standard_date_format(@question.created_at) %></p>

<!-- <p><strong>Subject: </strong><%= @question.subject.name if @question.subject %></p> -->
<p><strong>Subject: </strong><%= @question.subject&.name %></p>
<%# '...subject&.name' will return nil if the value of subject is nil, rather
than crashing your server %>

<p>
  <% if user_signed_in? && can?(:like, @question) %>
    <% if @question.liked_by?(current_user) %>
      <%= link_to(
        fa_icon('heart'),
        question_like_path(@question, @question.like_for(current_user)),
        method: :delete
      ) %>
    <% else %>
      <%= link_to fa_icon('heart-o'), question_likes_path(@question), method: :post %>
    <% end %>
  <% end %>
  <span><%= pluralize(@question.likes.count, 'like') %></span>
</p>

<p>
  <% user_vote = @question.votes.find_by_user_id current_user %>

  <% if user_vote.nil? %>
    <%= link_to fa_icon('angle-up 3x'), question_votes_path(@question, is_up: true),
                           method: :post %>
    <br>
    <%= link_to fa_icon('angle-down 3x'), question_votes_path(@question, is_up: false),
                             method: :post %>
  <% elsif user_vote.is_up? %>
    <%= link_to fa_icon('caret-up 3x'), question_vote_path(@question, user_vote),
                               method: :delete %>
    <br>
    <%= link_to fa_icon('angle-down 3x'), question_vote_path(@question,
                                                user_vote,
                                                { is_up: false }),
                             method: :patch %>
  <% else %>
    <%= link_to fa_icon('angle-up 3x'), question_vote_path(@question,
                                              user_vote,
                                              { is_up: true }),
                             method: :patch %>
    <br>
    <%= link_to fa_icon('caret-down 3x'), question_vote_path(@question, user_vote),
                               method: :delete %>
  <% end %>

  ( <%= @question.votes_count %> )
</p>


<% if can? :edit, @question %>
  <%= link_to 'Edit', edit_question_path(@question) %>
<% end %>

  <%# Rails enables us to make links send non-GET requests by setting the method
  attribute for 'link_to'. Rails uses JavaScript to accomplish that. %>

<% if can? :destroy, @question %>
  <%= link_to 'Delete', question_path(@question),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
<% end %>


<h2>Answers</h2>

<%= @answer.errors.full_messages.join(', ') %>
<%# action = /questions/:question_id/answers %>
<%= form_for [@question, @answer] do |f| %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>

<hr>

<% @question.answers.each do |answer| %>
  <p><%= answer.body %></p>
  <%= link_to(
    'Delete',
    question_answer_path(@question, answer),
    method: :delete,
    data: { confirm: 'Are you sure?' }
  ) %>
  <hr>
<% end %>
